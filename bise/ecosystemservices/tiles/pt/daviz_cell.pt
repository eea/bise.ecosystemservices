<div class="cardgraph [ is-collapsed ]"
  tal:define="daviz options/daviz; href daviz/item_url; title daviz/item_title">
  <div class="card__inner [ js-expander ]">
    <h5 class="card-title" tal:content="title">Title</h5>
    <img tal:attributes="src string:${href}/image_preview; alt title" />
  </div>
  <div class="card__expander">
    <i class="fa fa-close [ js-collapser ]"></i>

    <div class="iframe-wrapper is-loading"
      tal:attributes="data-iframe-url string:${href}/embed-chart?chart=chart_1&chartWidth=600&padding=fixed;"
      data-iframe-width="600"
      data-iframe-height="600">
    </div>
    <div class="card-desc">
      <a href="" tal:attributes="href daviz/item_url" tal:content="title">Title</a>
      <p class="card-desc-content" tal:content="daviz/item_description">Lorem ipsum</p>
      <a href="" tal:attributes="href daviz/item_url" target="_blank" class="btn btn-primary">Go to source</a>
    </div>
  </div>
</div>
