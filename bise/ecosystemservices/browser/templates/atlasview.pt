<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="bise.ecosystemservices">
<body>

<metal:main fill-slot="content-core">
  <metal:content-core define-macro="content-core">

  <div id="scale">
    <div>Global</div>
    <div class="selected">European</div>
    <div>National</div>
    <div>Subnational</div>
  </div>


  <div id="mapSelector">
    <div>Ecosystem: </div>
    <div>
      <select>
        <option>Select ecosytem</option>
        <tal:block tal:repeat="ecosystem view/get_ecosystems">
          <optgroup label="Terrestrial">
            <option tal:define="category ecosystem/item/category" 
              tal:condition="python:category == 1"  
              tal:attributes="data-webmap ecosystem/item/webmapid"
              tal:content="ecosystem/item/title"></option>
          </optgroup>
        </tal:block>
        <tal:block tal:repeat="ecosystem view/get_ecosystems">
          <optgroup label="Fresh water">
            <option tal:define="category ecosystem/item/category" 
              tal:condition="python:category == 2"  
              tal:attributes="data-webmap ecosystem/item/webmapid"
              tal:content="ecosystem/item/title"></option>
          </optgroup>
        </tal:block>        
        <tal:block tal:repeat="ecosystem view/get_ecosystems">
          <optgroup label="Marine">
            <option tal:define="category ecosystem/item/category" 
              tal:condition="python:category == 3"  
              tal:attributes="data-webmap ecosystem/item/webmapid"
              tal:content="ecosystem/item/title"></option>
          </optgroup>
        </tal:block> 
      </select>
    </div>
    <div>Service: </div>
    <div>
      <select>
        <option>Select service</option>
        <optgroup label="Provisioning">
          <option>Nutrition</option>
          <option>Materials</option>
          <option>Energy</option>
        </optgroup>
        <optgroup label="Regulation and maintenance">
          <option>Mediation of waste, toxics and other nuisances</option>
          <option>Mediation of flows</option>
          <option>Maintenance of physical, chemical, biological conditions</option>
        </optgroup>
        <optgroup label="Cultural">
          <option>Physical and experiential interactions</option>
          <option>Spiritual, symbolic and other interactions</option>
        </optgroup>
      </select>      
    </div>

  </div>


  <div class="ecosystem" tal:repeat="ecosystem view/get_ecosystems">
    <h2 tal:content="ecosystem/item/Title">
      Here goes the title
    </h2>
    <div class="services">
      <div class="service" tal:repeat="service ecosystem/services">
        <h2 tal:content="service/Title">
          Here goes the service title
        </h2>
        <div class="service-content"
          tal:content="structure service/text/output|nothing">

        </div>
      </div>
    </div>

  </div>

  <div style="clear:both">
  <div id="mapSection" style="height:457px">
    <div id="title" style="font-weight:bold; margin: 10px 0; font-size:22px"></div>
    <div id="mainMap" style="width:80%;float:left;height: 400px"></div>
    <div id="legendContainer" style="width:20%; float:left"></div>
    <div id="attribution" style="clear:both"></div>
  </div>
  
  </metal:content-core>
</metal:main>

</body>
</html>

